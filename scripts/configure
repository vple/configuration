#!/bin/zsh

set -e

### VARS ###

GIT_ROOT=$(git rev-parse --show-toplevel)
VERBOSE=0

### AUTOLOAD ###

fpath=( "$GIT_ROOT/.zsh_functions" "${fpath[@]}" )
autoload -Uz has
autoload -Uz log
autoload -Uz link_file

### OPT PARSING ###

while getopts "v" OPTION
do
  case $OPTION in
    v) VERBOSE=1 ;;
  esac
done

### UTILITY FUNCTIONS ###

### INSTALLATIONS ###

source "$GIT_ROOT/homebrew/install"

log "Done!"
