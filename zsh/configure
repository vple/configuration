#!/bin/sh

# Set theme to powerlevel10k.
append_if_missing "source $(brew --prefix)/opt/powerlevel10k/powerlevel10k.zsh-theme" ~/.zshrc "\n# Set theme to powerlevel10k."

# Oh My Zsh plugins.
# https://github.com/ohmyzsh/ohmyzsh/wiki/Plugins
ohmyzsh_plugins=(
  ag
  git
)

# Set plugins in ~/.zshrc
# Assumes Oh My Zsh has already been installed.
gsed -iE "s/^plugins=\(.*\)$/plugins=($ohmyzsh_plugins)/g" ~/.zshrc
